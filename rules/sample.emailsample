---
name: email
description: "Rule which sends an email when an email from johndoe@gmail.com is received"
pack: email
enabled: false
trigger:
  type: email.imap.message
  parameters: {}
criteria:
  trigger.from:
    pattern: ogsingru@gmail.com
    type: contains
action:
  ref: email.send_email
  parameters:
    body: 'We received an email'
    to: ogsingru@gmail.com
    from: omkarsingru21@gmail.com
    subject: 'Email Received'
